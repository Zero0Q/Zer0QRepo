<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.zero0q-matrix" name="zero0q's matrix test repository" version="0.0.1" provider-name="zero0q">
    <extension point="xbmc.addon.repository" name="zero0q's matrix test repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Zero0Q/repository.zero0q-matrix/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Zero0Q/repository.zero0q-matrix/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Zero0Q/repository.zero0q-matrix/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>zero0q's matrix test repository</summary>
        <description>My first repo...</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.jpg</icon>
        </assets>
    </extension>
</addon>

<addon id="script.gtv.helper" name="GTV Helper" version="0.0.3" provider-name="roidy">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.pil" version="1.1.7" />
    </requires>

    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">GTV helper</summary>
        <description lang="en_GB">Helper script for GTV skin</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="skin.gtv" version="0.1.7~alpha" name="GTV" provider-name="Zero0Q">
    <requires>
        <import addon="xbmc.gui" version="5.15.0" />
        <import addon="script.skinshortcuts" />
        <import addon="script.skinvariables" />
        <import addon="script.embuary.helper" version="1.0.0" />
        <import addon="script.embuary.info" version="1.0.0" />
        <import addon="script.gtv.helper" />
        <import addon="resource.images.languageflags.completepack" />
    </requires>
    <extension point="xbmc.gui.skin" debugging="false" effectslowdown="0.75">
        <res width="3840" height="2160" aspect="16:9" default="true" folder="xml" />
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Zero0Q</summary>
        <platform>all</platform>
    </extension>
</addon>
</addons>
